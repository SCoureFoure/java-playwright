<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="API Automation Framework Test Suite" verbose="1" parallel="methods" thread-count="4">
    
    <listeners>
        <listener class-name="com.testing.framework.core.listeners.TestListener"/>
    </listeners>
    
    <!-- Smoke Test Suite -->
    <test name="Smoke Tests" enabled="true">
        <classes>
            <class name="com.testing.framework.smoke.SmokeTest"/>
        </classes>
    </test>
    
    <!-- API Test Suite -->
    <test name="API Tests" enabled="true">
        <classes>
            <class name="com.testing.framework.api.functional.SampleApiTest"/>
        </classes>
    </test>
    
    <!-- Demo App API Tests -->
    <test name="Demo User API Tests" enabled="true">
        <classes>
            <class name="com.example.tests.api.DemoUserApiTest"/>
        </classes>
    </test>
    
    <!-- UI Test Suite -->
    <!-- Note: UI tests require stable network and running frontend (port 3000) -->
    <test name="UI Tests" enabled="false">
        <classes>
            <class name="com.testing.framework.ui.functional.SampleUiTest"/>
        </classes>
    </test>
    
    <!-- Demo App UI Tests -->
    <!-- Note: These tests require the frontend server running on port 3000 -->
    <test name="Demo User UI Tests" enabled="false">
        <classes>
            <class name="com.example.tests.ui.DemoUserUiTest"/>
        </classes>
    </test>
    
</suite>
